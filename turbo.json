{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT"],
  "concurrency": 14,
  "pipeline": {
    "build": {
      "inputs": ["src/**/*", "package.json", "tsconfig.json"],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        "api/**",
        "public/build/**"
      ],
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["**/*.spec.ts", "**/*.spec.tsx"],
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "inputs": ["src/**/*", "package.json", "tsconfig.json"],
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": false
    },
    "start": {
      "cache": false,
      "persistent": false
    },
    "clean": {
      "cache": false
    }
  }
}
